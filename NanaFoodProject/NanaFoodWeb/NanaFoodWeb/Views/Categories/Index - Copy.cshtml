@model IEnumerable<NanaFoodWeb.Models.CategoryDto>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Index";
}

<!-- categories.html -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Admin - Categories</title>
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="css/sb-admin-2.min.css" rel="stylesheet">
    <style>
        .table tbody tr:hover {
            background-color: #dbb785;
        }

        .btn {
            transition: background-color 0.3s ease;
        }

            .btn:hover {
                background-color: #69cfb7;
            }
    </style>
</head>

<body id="page-top">
    <div id="wrapper">

        <!-- Main Content -->
        <div id="content-wrapper" class="d-flex flex-column">
            <div id="content">
                <div>
                    <form asp-action="Index" method="get">
                        <input type="text" name="searchQuery" value="@ViewBag.CurrentFilter" placeholder="Search by category name...." />
                        <input type="submit" value="Tìm kiếm" />
                    </form>
                </div>
                <div class="container-fluid">
                    <h1 class="h3 mb-4 text-gray-800">Category List</h1>
                    @* <a href="add-category.html" class="btn btn-primary mb-3">Add Category</a> *@
                    <p>
                        <a asp-action="Create" class="btn btn-primary mb-3" asp-controller="Categories">Add Category</a>
                    </p>
                    <div class="card shadow">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Categories</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Category ID</th>
                                            <th>Category Name</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @* <tr>
                                            <td>1</td>
                                            <td>Category 1</td>
                                            <td>
                                                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Categories" asp-route-id="1">Edit</a>
                                                <a class="btn btn-warning btn-sm" asp-action="Details" asp-controller="Categories" asp-route-id="1">Details</a>
                                                <button class="btn btn-danger btn-sm" onclick="deleteCategory(1)">Delete</button>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>2</td>
                                            <td>Category 2</td>
                                            <td>
                                                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Categories" asp-route-id="2">Edit</a>
                                                <a class="btn btn-warning btn-sm" asp-action="Details" asp-controller="Categories" asp-route-id="2">Details</a>
                                                <button class="btn btn-danger btn-sm" onclick="deleteCategory(2)">Delete</button>
                                            </td>
                                        </tr>*@
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.CategoryId</td>
                                                <td>@item.CategoryName</td>
                                                <td>
                                                    <a asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                                                    <a asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                                                    <a asp-action="Details" asp-route-id="@item.CategoryId">Details</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="js/sb-admin-2.min.js"></script>

    @* <script>
        function deleteCategory(id) {
            if (confirm("Are you sure you want to delete this category?")) {
                alert("Category " + id + " deleted.");
            }
        }
    </script> *@
</body>
</html>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
@{
    var currentPage = ViewData["currentPage"] as int? ?? 1;
    var totalPages = ViewData["totalPages"] as int? ?? 1;
}
<style>
    .card-title {
        overflow: hidden; 
        text-overflow: ellipsis; 
        white-space: nowrap; 
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>
@model NanaFoodWeb.Models.Dto.ViewModels.ProductVM
<hr></hr>
<hr></hr>
<div class="container-fluid fruite py-5">
    <div class="container py-5">
        <div class="tab-class text-center">
            <div class="row g-4">
                <div class="col-lg-2 text-start">
                    <h2>Sản phẩm</h2>
                </div>
                <div class="col-lg-10 text-end">
                    <ul class="nav nav-pills d-inline-flex text-center mb-5">
                        <li class="nav-item">
                            <a class="d-flex m-2 py-2 bg-light rounded-pill active" data-bs-toggle="pill" href="#tab-1">
                                <span class="text-dark" style="width: 130px;">Tất cả sản phẩm</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="d-flex py-2 m-2 bg-light rounded-pill" data-bs-toggle="pill" href="#tab-2">
                                <span class="text-dark" style="width: 130px;">Humberger</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="d-flex m-2 py-2 bg-light rounded-pill" data-bs-toggle="pill" href="#tab-3">
                                <span class="text-dark" style="width: 130px;">Gà rán</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="d-flex m-2 py-2 bg-light rounded-pill" data-bs-toggle="pill" href="#tab-4">
                                <span class="text-dark" style="width: 130px;">Mì ý</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="d-flex m-2 py-2 bg-light rounded-pill" data-bs-toggle="pill" href="#tab-6">
                                <span class="text-dark" style="width: 130px;">Pizza</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="d-flex m-2 py-2 bg-light rounded-pill" data-bs-toggle="pill" href="#tab-7">
                                <span class="text-dark" style="width: 130px;">Khác</span>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="filter py-2">
                    <select class="form-select filter-dropdown" aria-label="filter">
                        <option selected>Bộ lọc</option>
                        <option value="1">***</option>
                        <option value="2">***</option>
                        <option value="3">***</option>
                        <option value="4">***</option>
                    </select>
                    <button class="btn filter-button"></button>
                </div>
            </div>
            <div class="tab-content">
                <div id="tab-1" class="tab-pane fade show p-0 active">
                    <div class="row g-4">
                        <div class="col-lg-12">
                            <div class="row g-4">
                                @if (Model?.Products != null&& Model.Products.Any())
                                {
                                    @foreach (var product in Model.Products.Where(e => e.IsActive == true))
                                    {
                                        <div class="col-md-6 col-lg-4 col-xl-3">
                                            <div class="rounded position-relative fruite-item">
                                                <div class="fruite-img">
                                                    <img src="@product.ImageUrl" class="img-fluid w-100 rounded-top" alt="@product.ProductName">
                                                </div>
                                                <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">Món ăn</div>
                                                <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                                                    <h4 class="card-title">@product.ProductName</h4>
                                                    <div class="d-flex justify-content-between flex-lg-wrap">
                                                        <p class="text-dark fs-5 fw-bold mb-0">@product.Price.ToString("N0") VND</p>
                                                        <a href="#" class="btn border border-secondary rounded-pill px-3 text-warning">
                                                            <i class="fa fa-shopping-bag me-2 text-warning"></i>Giỏ Hàng
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                                <div class="custom-pagination">
                                    <nav aria-label="Page navigation example">
                                        <ul class="pagination">
                                            @if (currentPage > 1)
                                            {
                                                <li class="page-item">
                                                    <a class="page-link" href="@Url.Action("Menu", new { page = currentPage - 1, searchQuery = ViewData["searchQuery"] })" aria-label="Previous">
                                                        <span aria-hidden="true">&laquo;</span>
                                                    </a>
                                                </li>
                                            }

                                            @for (var i = 1; i <= totalPages; i++)
                                            {
                                                <li class="page-item @(i == currentPage ? "active" : "")">
                                                    <a class="page-link" href="@Url.Action("Menu", new { page = i, searchQuery = ViewData["searchQuery"] })">
                                                        @i
                                                    </a>
                                                </li>
                                            }

                                            @if (currentPage < totalPages)
                                            {
                                                <li class="page-item">
                                                    <a class="page-link" href="@Url.Action("Menu", new { page = currentPage + 1, searchQuery = ViewData["searchQuery"] })" aria-label="Next">
                                                        <span aria-hidden="true">&raquo;</span>
                                                    </a>
                                                </li>
                                            }
                                        </ul>
                                    </nav>
                                </div>
                                <style>
                                    .custom-pagination .pagination {
                                        display: flex;
                                        justify-content: center;
                                    }

                                </style>
                            </div>
                        </div>
                    </div>
                    
                   
                </div>
                
            </div>
           
        </div>
        
    </div>
</div>
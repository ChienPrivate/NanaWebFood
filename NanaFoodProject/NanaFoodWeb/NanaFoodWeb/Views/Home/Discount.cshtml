@{
    ViewData["Title"] = "Discount";
    Layout = "_Layout";
}


<!-- Nhúng Bootstrap CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
<!-- Nhúng Font Awesome cho biểu tượng -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">


<!-- Header -->
<header class="bg-warning text-white text-center py-4">
    <h1>Khuyến Mãi Đặc Biệt</h1>
    <p>Hãy thưởng thức ưu đãi tuyệt vời tại cửa hàng của chúng tôi</p>
</header>

<!-- Phần chính -->
<div class="container my-5">
    <div class="row">
        <!-- Mã Giảm Giá 1 -->
        <div class="col-md-4">
            <div class="card border-danger mb-4">
                <div class="card-header bg-danger text-white text-center">
                    <h5>Mã Giảm Giá: FAST20</h5>
                </div>
                <div class="card-body text-center">
                    <p class="card-text">
                        Giảm 20% cho đơn hàng từ 100.000đ trở lên.
                    </p>
                    <p>Hạn sử dụng: 30/11/2024</p>
                    <button class="btn btn-danger"><i class="fas fa-copy"></i> Sao chép mã</button>
                </div>
            </div>
        </div>

        <!-- Mã Giảm Giá 2 -->
        <div class="col-md-4">
            <div class="card border-success mb-4">
                <div class="card-header bg-success text-white text-center">
                    <h5>Mã Giảm Giá: FREESHIP</h5>
                </div>
                <div class="card-body text-center">
                    <p class="card-text">
                        Miễn phí vận chuyển cho đơn hàng từ 50.000đ.
                    </p>
                    <p>Hạn sử dụng: 31/12/2024</p>
                    <button class="btn btn-success"><i class="fas fa-copy"></i> Sao chép mã</button>
                </div>
            </div>
        </div>

        <!-- Mã Giảm Giá 3 -->
        <div class="col-md-4">
            <div class="card border-primary mb-4">
                <div class="card-header bg-primary text-white text-center">
                    <h5>Mã Giảm Giá: COMBO50</h5>
                </div>
                <div class="card-body text-center">
                    <p class="card-text">
                        Giảm 50% khi mua combo 2 phần Gà rán + Pepsi.
                    </p>
                    <p>Hạn sử dụng: 15/12/2024</p>
                    <button class="btn btn-primary"><i class="fas fa-copy"></i> Sao chép mã</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Ưu Đãi Đặc Biệt -->
    <h2 class="text-center mt-5">Ưu Đãi Đặc Biệt</h2>
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card mb-4">
                <img src="~/images/banner1.png" class="card-img-top" alt="Ưu đãi đặc biệt 1">
                <div class="card-body">
                    <h5 class="card-title">Mua 1 tặng 1</h5>
                    <p class="card-text">Mua 1 phần Gà rán nhận ngay 1 Coca miễn phí. Áp dụng từ 1/11 - 30/11/2024.</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card mb-4">
                <img src="~/images/banner2.png" class="card-img-top" alt="Ưu đãi đặc biệt 2">
                <div class="card-body">
                    <h5 class="card-title">Giảm giá 25% cho người mới</h5>
                    <p class="card-text">Giảm ngay 25% cho người mới. Áp dụng đến hết năm 2024.</p>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Nhúng Bootstrap JS và Popper (nếu cần) -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>


@{
    Layout = "_AdminLayout";
}
@model NanaFoodWeb.Models.Dto.CouponDto
<div id="wrapper">
    <!-- Main Content -->
    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
            <div class="container-fluid">
                <h1 class="h3 mb-4 text-gray-800">Chỉnh sửa</h1>

                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Thông tin mã giảm giá</h6>
                    </div>
                    <div class="card-body">
                        <form id="editCouponForm" asp-action="Edit" asp-controller="Coupon" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="couponCode">Mã giảm giá</label>
                                <input asp-for="CouponCode" class="form-control" id="couponCode" readonly />
                                <span asp-validation-for="CouponCode" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="discount">Giá giảm</label>
                                <input asp-for="Discount" type="number" class="form-control" id="discount" name="discount" required>
                            </div>

                            <div class="form-group">
                                <label for="minAmount">Số tiền tối thiểu</label>
                                <input asp-for="MinAmount" type="number" class="form-control" id="discount" name="minAmount" required>
                            </div>
                            <div class="form-group">
                                <label for="description">Mô tả mã giảm giá</label>
                                <input asp-for="Description" class="form-control" id="description" name="description" required>
                            </div>
                            <div class="form-group">
                                <label >Ngày bắt đầu</label>
                                <input asp-for="CouponStartDate" type="date" class="form-control" asp-for="CouponStartDate" required>
                                <span asp-validation-for="CouponStartDate" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label >Ngày kết thúc</label>
                                <input asp-for="EndStart" type="date" class="form-control" asp-for="EndStart" required>
                                <span asp-validation-for="EndStart" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Tổng số mã giảm giá</label>
                                <input asp-for="MaxUsage" type="number"class="form-control" asp-for="MaxUsage" required />
                                <span asp-validation-for ="MaxUsage" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary"><i class="fa-regular fa-pen-to-square"></i>Chỉnh sửa</button>
                            <a href="@Url.Action("Index", "Coupon")" class="btn btn-secondary">Huỷ</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="vendor/jquery/jquery.min.js"></script>
<script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="vendor/jquery-easing/jquery.easing.min.js"></script>
<script src="js/sb-admin-2.min.js"></script>

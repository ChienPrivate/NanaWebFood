
<section class="login-container">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <img src="/images/Login.png" class="right-image shadow-4" alt="Login Image">
            </div>
            <div class="col-lg-6">
                <div class="card cascading-right bg-body-tertiary">
                    <div class="card-body shadow-5">
                        <h4 class="fw-bold mb-4 text-center">Khôi phục mật khẩu</h4>
                        <form asp-controller="Auth" asp-action="ForgotPassword" enctype="multipart/form-data">
                            <div class="mb-2">
                                <label for="email" class="form-label">Nhập email</label>
                                <input type="email" class="form-control" id="email" name="email" placeholder="Nhập email cần lấy lại mật khẩu">
                            </div>
                            <span class="text-danger text-center">@Html.ValidationMessage("Email")</span>
                            <button type="submit" class="btn btn-success w-100 mt-3">Gửi mật khẩu tới email</button>
                        </form>
                        <div class="text-center mt-3">
                            <p>Đã nhớ mật khẩu <a asp-action="Login">Đăng nhập</a></p>
                        </div>
                        <div class="text-center">
                            <p>Bạn chưa có tài khoản? <a asp-action="Register">Đăng ký</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"></script>
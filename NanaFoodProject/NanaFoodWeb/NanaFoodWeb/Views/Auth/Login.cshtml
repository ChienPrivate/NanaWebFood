@model NanaFoodWeb.Models.Dto.LoginDto
<div>
    <section class="login-container">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <img src="/images/Login.png" class="right-image shadow-4" alt="Login Image">
                </div>
                <div class="col-lg-6">
                    <div class="card cascading-right bg-body-tertiary">
                        <div class="card-body shadow-5">
                            <h4 class="fw-bold mb-4 text-center">Đăng Nhập</h4>
                            <form asp-controller="auth" asp-action="login" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <label for="fullname" class="form-label">Tên đăng nhập <span class="text-danger">*</span></label>
                                    <input asp-for=UserName type="text" class="form-control" id="username" placeholder="Nhập tên tài khoản">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label for="password" class="form-label">Mật khẩu <span class="text-danger">*</span></label>
                                    <input asp-for=Password type="password" class="form-control" id="password" placeholder="Nhập mật khẩu">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <div class="mb-3 form-check">
                                        <input asp-for=keepLogined type="checkbox" class="form-check-input" id="rememberMe">
                                        <label class="form-check-label" for="rememberMe">Ghi nhớ đăng nhập</label>
                                    </div>
                                    <div class="forgot-password">
                                        <a asp-controller="Auth" asp-action="ForgotPassword">Quên mật khẩu?</a>
                                    </div>
                                    
                                </div>
                                <style>
                                    .text-danger ul {
                                        list-style: none;
                                    }
                                </style>
                                <div asp-validation-summary="All" class=" text-decoration-none text-danger">
                                </div>
                                <button type="submit" class="btn btn-success w-100 mb-3">Đăng Nhập</button>
                                <div class="text-center mb-3">Hoặc tiếp tục với</div>                              
                            </form>
                            <form method="post">
                                <button asp-action="GoogleLogin" type="submit" class="btn btn-outline-danger w-100 mb-2">
                                    <i class="fa fa-google"></i> Đăng nhập bằng Google
                                </button>
                            </form>
                            <form method="post">
                                <button asp-action="FacebookLogin" type="submit" class="btn btn-outline-facebook w-100 mb-2">
                                    <i class="fa fa-facebook"></i> Đăng nhập bằng Facebook
                                </button>
                            </form>
                            <form method="post">
                                <button asp-action="GitHubLogin" type="submit" class="btn btn-outline-dark w-100 mb-2">
                                    <i class="fa fa-github"></i> Đăng nhập bằng GitHub
                                </button>
                            </form>
                            
                            <div class="text-center mt-4">
                                <p>Bạn chưa có tài khoản? <a asp-action="Register">Đăng ký</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
    .btn-outline-facebook {
        color: #0d6efd;
        border-color: #0d6efd;
    }

        .btn-outline-facebook:hover {
            color: #fff;
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

        .btn-check:focus + .btn-outline-facebook, .btn-outline-facebook:focus {
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.5);
        }

        .btn-check:checked + .btn-outline-facebook, .btn-check:active + .btn-outline-facebook, .btn-outline-facebook:active, .btn-outline-facebook.active, .btn-outline-facebook.dropdown-toggle.show {
            color: #fff;
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

            .btn-check:checked + .btn-outline-facebook:focus, .btn-check:active + .btn-outline-facebook:focus, .btn-outline-facebook:active:focus, .btn-outline-facebook.active:focus, .btn-outline-facebook.dropdown-toggle.show:focus {
                box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.5);
            }

        .btn-outline-facebook:disabled, .btn-outline-facebook.disabled {
            color: #0d6efd;
            background-color: transparent;
        }

</style>

<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"></script>
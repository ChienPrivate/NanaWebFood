

@model List<NanaFoodWeb.Models.Dto.CartDetailsDto>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}

<!-- Cart Section -->
<div class="container-fluid py-5">
    <div class="row">
        <h4 class="text-center mb-4">Giỏ Hàng Của Tôi</h4>
        <div class="col-lg-8 col-md-12">
            <!-- Product 1 -->
             @foreach (var item in Model)
            {
                <div class="card mb-3 p-3 shadow-sm">
                    <div class="row g-0 align-items-center">
                        <div class="col-md-2">
                            <img src="@item.Image" class="img-fluid rounded-start" alt="Hamburger Cá">
                        </div>
                        <div class="col-md-6">
                            <div class="card-body">
                                <h5 class="card-title">@item.ProductName</h5>
                                <a href="#" class="text-danger fw-bold">Xóa</a>
                            </div>
                        </div>
                        <div class="col-md-4 d-flex justify-content-end align-items-center">
                            <div class="d-flex">
                                <button class="btn btn-light btn-circle">-</button>
                                <input type="text" value="@item.Quantity" class="form-control text-center mx-2 quantity-input"/>
                                <button class="btn btn-light btn-circle">+</button>
                            </div>
                            <span class="ms-3 fw-bold">@(item.Quantity * item.Price)</span>
                        </div>
                    </div>
                </div>
            }
           

        </div>

        <!-- Cart Summary -->
        <div class="col-lg-4 col-md-12">
            <div class="card shadow-sm p-4">
                <div class="card-body">
                    <h5 class="card-title">Tóm tắt đơn hàng</h5>
                    <hr>
                    <form>
                        <div class="mb-3">
                            <label for="discountCode" class="form-label">Bạn có mã giảm giá?</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="discountCode" placeholder="Mã giảm giá *">
                                <button class="btn btn-danger">Áp dụng</button>
                            </div>
                        </div>
                    </form>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <span>Tổng đơn hàng</span>
                        <span>@ViewBag.TotalMoney</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Phí giao hàng</span>
                        <span>@ViewBag.FeeDeli</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <strong>Tổng thanh toán</strong>
                        <strong>@ViewBag.TotalPay</strong>
                    </div>
                    <a class="btn btn-danger w-100 mt-3" asp-action="_Checkout" asp-controller="Cart" class="btn btn-primary">Thanh toán</a>
                </div>
            </div>
        </div>
    </div>
</div>

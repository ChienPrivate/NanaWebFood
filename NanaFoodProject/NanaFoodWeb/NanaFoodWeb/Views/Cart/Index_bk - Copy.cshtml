@model List<NanaFoodWeb.Models.Dto.CartDetailsDto>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Index";
}

<div class="row">
    <div id="content" class="col-sm-12" style="
    margin-top: 15%;
    padding-left: 5%;
    padding-right: 5%;
">
        <h2 class="title">Giỏ hàng của tôi</h2>
        <div class="table-responsive form-group">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <td class="text-center">Hình ảnh</td>
                        <td class="text-left">Sản phẩm</td>
                        <td class="text-left">Số lượng</td>
                        <td class="text-right">Giá</td>
                        <td class="text-right">Tổng</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                <a href="/Product/Details/@item.ProductId">
                                    <img width="70px" src="@item.Image" alt="@item.ProductName"
                                         title="@item.ProductName" class="img-thumbnail" />
                                </a>
                            </td>
                            <td class="text-left">
                                <a href="/Product/Details/@item.ProductId">@item.ProductName</a><br />
                            </td>
                            <td class="text-left" hidden>@item.ProductId</td>
                            <td class="text-left" width="200px">
                                <div class="input-group btn-block quantity">
                                    <input type="text" name="quantity" value="@item.Quantity" size="1"
                                           class="form-control" />
                                    <span class="input-group-btn">
                                        <button type="submit" data-toggle="tooltip" title="Cập nhật"
                                                class="btn btn-primary">
                                            <i class="fa fa-clone"></i>
                                        </button>
                                        <form asp-action="DeleteCart" method="get" class="d-inline" asp-route-id="@item.ProductId">
                                            @* <input type="hidden" name="productId" value="@item.ProductId" /> *@
                                            <input type="hidden" name="productId" value="@item.ProductId" />
                                            <button type="submit" data-toggle="tooltip" title="Xoá"
                                                    class="btn btn-danger">
                                                <i class="fa fa-times-circle"></i>
                                            </button>
                                        </form>
                                    </span>
                                </div>
                            </td>
                            <td class="text-right">@item.Price</td>
                            <td class="text-right">@(item.Quantity * item.Price)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <h3 class="subtitle no-margin">Bạn muốn làm gì tiếp theo?</h3>
        <p>Chọn xem bạn có mã giảm giá muốn sử dụng.</p>

        <!-- Mã giảm giá -->
        <div class="panel-group" id="accordion">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a href="#collapse-coupon" class="accordion-toggle" data-toggle="collapse"
                           data-parent="#accordion" aria-expanded="true">
                            Sử dụng mã giảm giá
                            <i class="fa fa-caret-down"></i>
                        </a>
                    </h4>
                </div>
                <div id="collapse-coupon" class="panel-collapse collapse in" aria-expanded="true">
                    <div class="panel-body">
                        <label class="col-sm-2 control-label" for="input-coupon">Nhập mã giảm giá của bạn tại đây</label>
                        <div class="input-group">
                            <input type="text" name="coupon" value="" placeholder="Enter your coupon here"
                                   id="input-coupon" class="form-control">
                            <span class="input-group-btn">
                                <input type="button" value="Apply Coupon" id="button-coupon" class="btn btn-primary">
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Phí giao hàng -->
        <div class="panel-group" id="shipping-accordion">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4 class="panel-title">
                        <a href="#collapse-shipping" class="accordion-toggle" data-toggle="collapse"
                           data-parent="#shipping-accordion" aria-expanded="true">
                            Phí vận chuyển
                            <i class="fa fa-caret-down"></i>
                        </a>
                    </h4>
                </div>
                <div id="collapse-shipping" class="panel-collapse collapse in" aria-expanded="true">
                    <div class="panel-body">
                        <div class="form-group">
                            <label for="TinhThanhPho">Tỉnh/Thành phố:</label>
                            <select id="TinhThanhPho" class="form-control" onchange="calculateShippingFee()">
                                <option value="">Chọn tỉnh/thành phố</option>
                                <option value="HoChiMinh">Hồ Chí Minh</option>
                                <option value="HaNoi">Hà Nội</option>
                                <option value="AnGiang">An Giang</option>
                                <!-- Add other locations as needed -->
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="QuanHuyen">Quận/Huyện:</label>
                            <select id="QuanHuyen" class="form-control" onchange="calculateShippingFee()">
                                <option value="">Chọn quận/huyện</option>
                                <option value="Quan12">Quận 12</option>
                                <option value="DongDa">Đống Đa</option>
                                <option value="ChoMoi">Chợ Mới</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="PhuongXa">Phường/Xã:</label>
                            <select id="PhuongXa" class="form-control" onchange="calculateShippingFee()">
                                <option value="">Chọn phường/xã</option>
                                <option value="TrungMyTay">Trung Mỹ Tây</option>
                                <option value="KienAn">Kiến An</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="ShippingFee">Phí giao hàng:</label>
                            <span id="shippingFee">0 VND</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tổng chi phí -->
        <div class="row">
            <div class="col-sm-4 col-sm-offset-8">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <td class="text-right"><strong>Tổng:</strong></td>
                            <td class="text-right">@Model.Sum(x => x.Total) VND</td>
                        </tr>
                        <tr>
                            <td class="text-right"><strong>Giảm giá (10%):</strong></td>
                            <td class="text-right">@((Model.Sum(x => x.Total) * 0.1)) VND</td>
                        </tr>
                        <tr>
                            <td class="text-right"><strong>Phí vận chuyển:</strong></td>
                            <td class="text-right" id="shippingFee">0 VND</td>
                        </tr>
                        <tr>
                            <td class="text-right"><strong>Tổng cộng:</strong></td>
                            <td class="text-right">@((Model.Sum(x => x.Total) * 0.9)) VND</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="buttons">
            <a class="pull-left"><a asp-action="index" asp-controller="home" class="btn btn-primary">Tiếp tục mua sắm</a></a>
            <a class="pull-right"><a asp-action="_Checkout" asp-controller="Cart" class="btn btn-primary">Thanh toán</a></a>
        </div>
    </div>
</div>

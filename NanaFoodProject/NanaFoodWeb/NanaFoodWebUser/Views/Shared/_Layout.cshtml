<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StoreManagement</title>

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/qrcodejs/qrcode.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
    <script type="text/javascript">
        function generateQRCodeLayout(itemId) {
            var qrCodeContainer = document.getElementById('qrcode-' + itemId);
            qrCodeContainer.innerHTML = ""; // Clear previous QR code
            new QRCode(qrCodeContainer, {
                text: itemId,
                width: 128,
                height: 128
            });
        }
    </script>
</head>
<body>
    <header>
        
        <!-- Spinner Start -->
        <div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50  d-flex align-items-center justify-content-center">
            <div class="spinner-grow text-primary" role="status"></div>
        </div>
        <!-- Spinner End -->
         <!-- Navbar start -->
        <div class="container-fluid fixed-top">
            <div class="container topbar bg-primary d-none d-lg-block">
                <div class="d-flex justify-content-between">
                    <div class="top-info ps-2">
                        <small class="me-3"><i class="fas fa-map-marker-alt me-2 text-secondary"></i> <a href="#" class="text-white">Tô Ký Street, Hồ Chí Minh</a></small>
                        <small class="me-3"><i class="fas fa-envelope me-2 text-secondary"></i><a href="#" class="text-white">tramptnps27441@fpt.edu.vn</a></small>
                    </div>
                    
                </div>
            </div>
            <div class="container px-0">
                <nav class="navbar navbar-light bg-white navbar-expand-xl">
                    <a href="index.html" class="navbar-brand"><h1 class="text-primary display-6">Foodstuffs</h1></a>
                    <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                        <span class="fa fa-bars text-primary"></span>
                    </button>
                    <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
                        @if (!string.IsNullOrEmpty(ViewBag.UserName) && ViewBag.Role == "Admin")
                        {
                            <div class="navbar-nav mx-auto">
                                <a asp-action="Index" asp-controller="Items" class="nav-item nav-link active">Items</a>
                                <a asp-action="Index" asp-controller="ItemImage" class="nav-item nav-link">ItemImage</a>
                                <a asp-action="Index" asp-controller="Categories" class="nav-item nav-link">Categories</a>
                                <a asp-action="Index" asp-controller="Customers" class="nav-item nav-link">Customers</a>
                                <a asp-action="Index" asp-controller="Users" class="nav-item nav-link">Users</a>

                            </div>
                        }
                        else
                        {
                            <div class="navbar-nav mx-auto">
                                <a asp-action="Index" asp-controller="Home" class="nav-item nav-link active">Trang Chủ</a>
                                <a asp-action="Index" asp-controller="Shop" class="nav-item nav-link">Cửa Hàng</a>
                                <a asp-action="Details" asp-controller="Carts" class="nav-item nav-link">Chi Tiết Đơn Hàng</a>
                                <a asp-action="Details" asp-controller="Shop" class="nav-item nav-link">Thông Tin Cửa Hàng</a>

                            </div>
                        }
                        
                        <div class="d-flex m-3 me-0">
                            <button class="btn-search btn border border-secondary btn-md-square rounded-circle bg-white me-4" data-bs-toggle="modal" data-bs-target="#searchModal"><i class="fas fa-search text-primary"></i></button>
                            <a href="@Url.Content("~/Carts/Index")" class="position-relative me-4 my-auto">
                                <i class="fa fa-shopping-bag fa-2x"></i>
                                <span class="position-absolute bg-secondary rounded-circle d-flex align-items-center justify-content-center text-dark px-1" style="top: -5px; left: 15px; height: 20px; min-width: 20px;">3</span>
                            </a>
                            @if (!string.IsNullOrEmpty(ViewBag.CustCode)){
                                <a href='#' class="my-auto">
                                    <i class="fas fa-user fa-2x"></i>
                                </a>
                            }else{
                                <a href='@Url.Content("~/Login/Index")' class="my-auto">
                                    <i class="fas fa-fw fa-lock fa-2x"></i>
                                </a>
                            }
                            
                        </div>
                    </div>
                </nav>
            </div>
        </div>
        <!-- Navbar End -->
    </header>
    @* <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div> *@
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-white-50 footer pt-5 mt-5">
        <div class="container py-5">

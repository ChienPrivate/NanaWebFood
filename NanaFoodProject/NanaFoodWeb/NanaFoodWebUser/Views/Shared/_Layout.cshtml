                <div class="row g-4">
                    <div class="col-lg-3">
                        <a asp-action="Index" asp-controller="Home">
                            <h1 class="text-primary mb-0">Foodstuffs</h1>
                            <p class="text-secondary mb-0">Thức ăn nhanh</p>
                        </a>
                    </div>
                    <div class="col-lg-6">

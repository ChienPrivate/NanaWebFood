@model IEnumerable<StoreManagement.Models.CartDetails> 

@{
    var ListCarts = ViewData["CartDetails"] as IEnumerable<StoreManagement.Models.CartDetails>;
    var Cart = ViewData["Carts"] as StoreManagement.Models.Carts;
    var customers = ViewData["Customers"] as StoreManagement.Models.Customers;
    var guests = ViewData["Guest"] as StoreManagement.Models.Guest;
}

<div class="container-fluid page-header py-5"></div>
<div class="container-fluid fruite py-5">
    <div class="container py-5">
        <div class="row g-4 justify-content-center">

            <form class="needs-validation" name="frmthanhtoan" method="post" action="#">
                <input type="hidden" name="kh_tendangnhap" value="dnpcuong">

                <div class="py-5 text-center">
                    <i class="fa fa-credit-card fa-4x" aria-hidden="true"></i>
                    <h2>Thanh Toán</h2>
                    <p class="lead">Vui lòng kiểm tra thông tin giỏ hàng trước khi đặt hàng</p>
                </div>

                <div class="row">
                    <div class="col-md-4 order-md-2 mb-4">
                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-muted">Giỏ hàng</span>
                            <span class="badge badge-secondary badge-pill">@ListCarts?.Count() ?? 0</span>
                        </h4>
                        <ul class="list-group mb-3">
                            @if (ListCarts != null)
                            {
                                foreach (var itm in ListCarts)
                                {
                                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                                        <div>
                                            <h6 class="my-0">@itm.ItemName</h6>
                                            <small class="text-muted">@itm.Quantity x @itm.Price</small>
                                        </div>
                                        <span class="text-muted">@itm.Quantity * @itm.Price</span>
                                    </li>
                                }
                            }
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Thành Tiền (VND)</span>
                                <strong>@Cart?.TotalMoney</strong>
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-8 order-md-1">
                        <h4 class="mb-3">Thông Tin của Bạn</h4>

                        <div class="row">
                            <div class="col-md-12">
                                <label for="kh_ten">Họ Và Tên</label>
                                <input type="text" class="form-control" name="kh_ten" id="kh_ten" value="@customers?.CustomerName ?? guests?.GuestLastName" readonly="">
                            </div>
                            <div class="col-md-12">
                                <label for="kh_gioitinh">Giới Tính</label>
                                <input type="text" class="form-control" name="kh_gioitinh" id="kh_gioitinh" value="Nam" readonly="">
                            </div>
                            <div class="col-md-12">
                                <label for="kh_diachi">Địa Chỉ Nhận Hàng</label>
                                <input type="text" class="form-control" name="kh_diachi" id="kh_diachi" value="130 Xô Viết Nghệ Tỉnh" readonly="">
                            </div>
                            <div class="col-md-12">
                                <label for="kh_dienthoai">Số Điện Thoại</label>
                                <input type="text" class="form-control" name="kh_dienthoai" id="kh_dienthoai" value="0915659223" readonly="">
                            </div>
                            <div class="col-md-12">
                                <label for="kh_email">Email</label>
                                <input type="text" class="form-control" name="kh_email" id="kh_email" value="nva@gmail.com" readonly="">
                            </div>
                        </div>

                        <h4 class="mb-3">Chọn Phương Thức Thanh Toán</h4>

                        <div class="d-block my-3">
                            <div class="custom-control custom-radio">
                                <input id="httt-1" name="httt_ma" type="radio" class="custom-control-input" required="" value="1">
                                <label class="custom-control-label" for="httt-1">Thanh toán tiền mặt</label>
                            </div>
                            <div class="custom-control custom-radio">
                                <input id="httt-2" name="httt_ma" type="radio" class="custom-control-input" required="" value="2">
                                <label class="custom-control-label" for="httt-2">Chuyển Khoản</label>
                            </div>
                        </div>
                        <hr class="mb-4">
                        <button class="btn btn-primary btn-lg btn-block" type="submit" name="btnDatHang">Đặt Hàng</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
